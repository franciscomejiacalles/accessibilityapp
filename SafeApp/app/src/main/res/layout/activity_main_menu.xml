<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/gamesBtn"
        android:layout_width="315dp"
        android:layout_height="63dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#0ED6B9"
        android:text="Games"
        android:textColor="#fff"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safeAppTextView" />

    <Button
        android:id="@+id/analyticsBtn"
        android:layout_width="315dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0ED6B9"
        android:text="Analytics"
        android:textColor="#fff"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamesBtn" />

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="315dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0ED6B9"
        android:text="Profile"
        android:textColor="#fff"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analyticsBtn" />

    <TextView
        android:id="@+id/safeAppTextView"
        android:layout_width="269dp"
        android:layout_height="88dp"
        android:layout_marginTop="132dp"
        android:text="Safe App"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>