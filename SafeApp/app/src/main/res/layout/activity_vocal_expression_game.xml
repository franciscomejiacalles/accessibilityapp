<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocalExpressionGame">

    <ImageButton
        android:id="@+id/quitVocalExpressionGameButton"
        android:layout_width="68dp"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#fff"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Match the emotion behind the sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sound_button_1"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="192dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/disgust_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/disgust_word" />

    <ImageButton
        android:id="@+id/sound_button_2"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/fear_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/fear_word" />

    <ImageButton
        android:id="@+id/sound_button_3"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/confused_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_button_1"
        tools:src="@drawable/confused_word"
        tools:srcCompat="@drawable/confused_word" />

    <ImageButton
        android:id="@+id/sound_button_4"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/sad_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_button_2"
        tools:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/sad_word" />

    <ImageButton
        android:id="@+id/sound_button_5"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/anger_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_button_3"
        tools:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/anger_word" />

    <ImageButton
        android:id="@+id/sound_button_6"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/happy_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_button_4"
        tools:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/happy_word" />

    <ImageView
        android:id="@+id/vocalButton"
        android:layout_width="78dp"
        android:layout_height="92dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sound_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>