<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacialExpressionAnalytics">

    <TextView
        android:id="@+id/analyticsHSTextView"
        android:layout_width="116dp"
        android:layout_height="75dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analyticsHSTitle" />

    <TextView
        android:id="@+id/analyticsMinutesPlayedTextView"
        android:layout_width="116dp"
        android:layout_height="75dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/analyticsHSTextView"
        app:layout_constraintTop_toBottomOf="@+id/analyticsMinutesPlayedTitle" />

    <TextView
        android:id="@+id/scoreHistoryTextView"
        android:layout_width="169dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="#0ED6B9"
        android:gravity="center_horizontal"
        android:text="Score History"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameAnalyticsTitle" />

    <TextView
        android:id="@+id/analyticsHSTitle"
        android:layout_width="169dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:background="#0ED6B9"
        android:gravity="center_horizontal"
        android:text="High Score"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/analyticsMinutesPlayedTitle"
        android:layout_width="169dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:background="#0ED6B9"
        android:gravity="center_horizontal"
        android:text="Minutes Played"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/analyticsHSTitle"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/gameAnalyticsTitle"
        android:layout_width="327dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="Facial Expression Analytics"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analyticsFacialExpressionTitle" />

    <TextView
        android:id="@+id/analyticsFacialExpressionTitle"
        android:layout_width="246dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:text="Safe App"
        android:textSize="60sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/facialExpressionSHLineChart"
        android:layout_width="330dp"
        android:layout_height="238dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.717"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreHistoryTextView"></com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Game Number"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facialExpressionSHLineChart" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="328dp"
        android:text="Score"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/facialExpressionSHLineChart"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>