<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacialExpressionGameOver">

    <TextView
        android:id="@+id/gameOverTextView"
        android:layout_width="349dp"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:text="Game Over"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTitleTextView"
        android:layout_width="135dp"
        android:layout_height="77dp"
        android:layout_marginTop="52dp"
        android:text="Score"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOverTextView" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="116dp"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:text="0"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>